{
  "name": "pdf-blockchain-system",
  "version": "1.0.0",
  "description": "Sistema de blockchain para verificaci√≥n de documentos PDF usando IPFS y smart contracts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "demo": "ts-node scripts/test-demo.ts",
    "demo-mock": "ts-node scripts/demo-mock.ts",
    "create-test-docs": "ts-node scripts/create-test-documents.ts",
    "signature-system": "ts-node scripts/signature-system.ts",
    "test-signature": "jest tests/DocumentSignatureService.test.ts",
    "test-propietario": "ts-node scripts/test-propietario.ts",
    "generate-certificate": "ts-node scripts/generate-certificate.ts",
    "setup": "bash scripts/setup.sh",
    "install-deps": "bash scripts/install-dependencies.sh",
    "check-services": "bash scripts/start-services.sh",
    "anvil": "anvil",
    "ipfs": "ipfs daemon",
    "deploy": "ts-node scripts/deploy.ts",
    "clean": "rm -rf dist coverage node_modules package-lock.json",
    "fresh-install": "npm run clean && npm run install-deps",
    "full-setup": "npm run install-deps && npm run create-test-docs && npm run build"
  },
  "keywords": ["blockchain", "pdf", "ipfs", "ethereum", "typescript"],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.8.1",
    "dotenv": "^16.3.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/jest": "^29.5.6",
    "@types/mime-types": "^2.1.4",
